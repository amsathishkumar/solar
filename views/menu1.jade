head
    style.
      * {box-sizing: border-box}
      body {font-family: "Lato", sans-serif;}
      /* Style the tab */
      div.tab {
      float: left;
      border: 1px solid #ccc;
      background-color: #f1f1f1;
      width: 30%;
      height: 500px;
      }
      /* Style the buttons inside the tab */
      div.tab button {
      display: block;
      background-color: inherit;
      color: black;
      padding: 22px 16px;
      width: 100%;
      border: none;
      outline: none;
      text-align: left;
      cursor: pointer;
      transition: 0.3s;
      font-size: 17px;
      }
      /* Change background color of buttons on hover */
      div.tab button:hover {
      background-color: #ddd;
      }
      /* Create an active/current "tab button" class */
      div.tab button.active {
      background-color: #ccc;
      }
      /* Style the tab content */
      .tabcontent {
      float: left;
      padding: 0px 12px;
      border: 1px solid #ccc;
      width: 70%;
      border-left: none;
      height: 500px;
      }
  body
    include menu
    .tab
      button#defaultOpen.tablinks(onclick="actionTigger(event, 'Device')") Device
      button.tablinks(onclick="actionTigger(event, 'Invertor')") Invertor
      button.tablinks(onclick="actionTigger(event, 'Site')") Site
    #Device.tabcontent
      h3 Device
      include piechart
    #Invertor.tabcontent
      h3 Invertor
      p Invertor details.
    #Site.tabcontent
      h3 Site
      p Site Details.
    script.
      function actionTigger(evt, actionName) {
      var i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("tabcontent");
      for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tablinks");
      for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
      }
      document.getElementById(actionName).style.display = "block";
      evt.currentTarget.className += " active";
      }
      // Get the element with id="defaultOpen" and click on it
      document.getElementById("defaultOpen").click();
